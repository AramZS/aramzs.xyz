{% set collectionTerm = collectionVerb or "Planted" %}
<nav class="dates-list">
    <h2>{{ collectionTerm }} throughout the seasons</h2>

    {% set allPosts = collections.post | excludeStubs | excludeTypes(['mirror', 'amplify']) | reverse %}
    {% set postsByYear = allPosts | filterByWritingOnly | groupByYear %}

    <ol class="post-list">
    {% for year, items in postsByYear %}
        <li>
            <strong>{{ year }}</strong>
            <hr/>
            {% set postsByMonth = items | groupByMonth %}
            {% set year = year %}
            <small>
                {% include './months-of-year.njk' %}
            </small>
        </li>
    {% endfor %}
    </ol>
</nav>
