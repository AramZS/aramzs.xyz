{% extends "./page.njk" %}

{% block head %}
<script type="module" src="/scripts/contrast-ratio.js" async></script>
<script src="/scripts/contrast-checker.js" defer></script>
{% endblock %}

{% block content %}
<section data-source="src/_includes/layouts/list-contrasts.njk">
    <div id="compare">
      <div class="color-item" id="background-contraster">
        <div class="color-set__swatch comparison" id="foreground-contraster"></div>
        <div id="results-container">
          <div id="contrast-results">Ratio: <span id="contrast-result-ratio"></span> | Score: <span id="contrast-result-score"></span> | Accessible? <span id="contrast-result-check"></span></div>
        </div>
      </div>
    </div>
        <ul id="color-contrast-list">
            {% for colorSet in contrasts.colorSets %}
                <li class="color-item">
                    <div class="color-set" style="background-color: {{ colorSet[0] }}">
                        {% for colorHex in colorSet %}
                        <div class="color-set__swatch-container" style="background-color: {{ colorHex }}80">
                            <div class="color-set__swatch compare-ready-color" style="background-color: {{ colorHex }}"></div>
                        </div>
                        {% endfor %}
                    </div>
                </li>
            {% endfor %}
        </ul>
</section>        
{% endblock %}
