---
pagination:
  data: collections.contentPaginatedByType
  size: 1
  alias: type
permalink: /{{ type.slug }}/index.html
---

{% extends "_includes/layouts/page.njk" %}

{% set title = type.title %}

{% block content %}
  <small class="heading-prefix"><span>Writing</span></small>
  <h1>{{ type.title }}</h1>

  <section>
    <ul class="post-list">
      {% for post in type.items %}
        <li>
          <a href="{{ post.url }}" title="Read {{ post.data.title }}">
            {{ post.data.title }}
          </a> &mdash; {{ post.date | dateToFormat("DDD") }}
        </li>
      {% endfor %}
    </ul>
  </section>

  {% if type.totalPages > 1 %}
    <nav>
      <p>
        Viewing page {{ type.pageNumber }} of {{ type.totalPages }},
        {% if type.pageSlugs.previous %}<a href="/{{ type.pageSlugs.previous }}/">Previous Page</a>{% endif %}
        {% if type.pageSlugs.next %}<a href="/{{ type.pageSlugs.next }}/">Next Page</a>{% endif %}
      </p>
    </nav>
  {% endif %}

  <nav class="tags-list">
    <h1>Hot Topics</h1>
    <ul style="display: grid;">
      {%- for tag in collections.contentTags | limit(7) %}
        <li><a href="/topic/{{ tag.slug }}"> {{ tag.name }} <small>({{ tag.items.length }})</small></a></li>
      {%- endfor %}
      <li><a href="/topic">All Topics</a></li>
    </ul>
  </nav>

{% endblock %}
