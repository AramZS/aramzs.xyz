{% extends "./base.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block body_class %}dark{% endblock %}

{% block content %}
    <article>
        <header class="py-2 md:py-8 grid grid-cols-12">
            <div class="col-start-2 col-span-10 md:col-start-2 md:col-span-6">
                <h1 class="mb-8 text-6xl md:text-7xl font-bold leading-normal tracking-tighter">
                    {{ title }}
                </h1>
                <p class="text-2xl mb-2">
                    <time datetime="{{ date | dateToFormat("yyyy-MM-dd") }}">
                        {{ date | dateToFormat("dd LLL yyyy") }}
                    </time>
                </p>
            </div>
        </header>
        <section class="light py-12 grid grid-cols-12">
            <div class="col-start-2 col-end-12 lg:col-end-8">
                {{ content | safe }}
            </div>
        </section>
    </article>
{% endblock %}