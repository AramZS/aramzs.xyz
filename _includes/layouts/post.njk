{% extends "./page.njk" %}

{% set ogtype = 'article' %}

{% block content %}
    <article>
        <h1>
            {{ title }}
        </h1>
        <p>
            {% include "components/growth.njk" %}
            planted
            <time datetime="{{ page.date.toISOString() }}">
                {{ page.date | dateToFormat("dd LLL yyyy") }}
            </time>
            in
            {% for category in categories | formatSlugList %}
                <a class="pill" href="/blog/{{ category.slug }}">{{ category.title }}</a>
            {% endfor %}
            <br/>
            {{ content | wordStats }}.
        </p>
        <section>
            {{ content | safe }}
        </section>
    </article>
{% endblock %}
