{% extends "./base.njk" %}

{% block header %}
    <nav>
        {% if breadcrumbs %}
            {% for crumb in breadcrumbs %}
            <a href="{{ crumb.href }}" title="{{ crumb.title }}">{{ crumb.text }}</a>/
            {% endfor %}
        {% else %}
            <a href="/">~</a>/
        {% endif %}
    </nav>
{% endblock %}

{% block content %}
    <section>
        {% if title %}<h1 {% if sub_title %}class="with-sub-title"{% endif %}>{{ title }}</h1>{% endif %}
        {% if sub_title %}<p>{{ sub_title | safe }}</p>{%  endif %}

        {{ content | safe }}
    </section>
{% endblock %}
