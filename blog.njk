{% extends "_includes/layouts/page.njk" %}

{% set postslist = collections.post %}
{% set title = 'Blog Artchive' %}

{% block content %}
    <h1>Archive</h1>
    <p>There have been <strong>{{ postslist.length }}</strong> items published since April 20, 2007:</p>
    <section>
        <ol reversed class="post-list">
        {% for post in postslist | reverse %}
            <li>
                <small>{{ post.data.contentType }}</small>
                <a href="{{ post.url }}" title="Read {{ post.data.title }}">{{ post.data.title }}</a> &mdash; {{ post.date | dateToFormat("DDD") }}
            </li>
        {% endfor %}
        </ol>
    </section>
    {% include '_includes/components/hot-topics.njk' %}
{% endblock %}
